Sent=tag:Sent AND NOT tag:trash
Drafts=folder:thalheim.io/.Drafts AND NOT tag:trash
Spam=tag:Spam AND NOT tag:trash
Trash=tag:trash


# Smart folders
GitHub=tag:github AND NOT tag:trash
