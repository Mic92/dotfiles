{
  "compilerOptions": {
    "target": "es2023",
    "module": "es2022",
    "moduleResolution": "node",
    "lib": ["es2023", "dom", "dom.iterable"],
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "node_modules/@types"],
    "types": ["firefox-webext-browser"]
  },
  "include": [
    "*.js",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
